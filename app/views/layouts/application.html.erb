<!DOCTYPE html>
<html>
  <head>
    <title>Blocipedia</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header-container">
      <header>
        <h1 class="title-border"><%= link_to "Blocipedia", root_path, class: 'title'  %></h1>

        <ul class="account-information">
          <% if user_signed_in? %>
            <li><%= link_to 'New Post', new_wiki_path %></li>
            <li><%= link_to 'All Posts', wikis_path %></li>
            <li><%= link_to 'Your Posts', user_wikis_path %></li>
            <li><%= link_to current_user.username, home_show_path%></li>
            <li class="second-button"><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
          <% else %>
            <li><%= link_to "Sign In", new_user_session_path, class: 'nav-link' %></li>
            <li class="second-button"><%= link_to "Sign Up", new_user_registration_path, class: 'nav-link' %></li>
          <% end %>
        </ul>
      </header>
    </div>


    <p class= "notice"><%= notice %></p>
    <p class= "alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
